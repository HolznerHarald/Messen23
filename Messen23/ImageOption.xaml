<Window x:Class="Messen23.ImageOption"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messen23"
        mc:Ignorable="d"
        Title="ImageOption" Height="280" Width="250">
    <StackPanel Margin="10">
        <Label FontWeight="Bold" Margin="5">Image-Optionen</Label>
        <RadioButton Name="RB1" Margin="5">no scroll</RadioButton>
        <RadioButton Name="RB2" Margin="5">y-scroll</RadioButton>
        <RadioButton Name="RB3" Margin="5">all Pixel</RadioButton>
        <Separator/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Click="Button_Click"  Grid.Column="0" Margin="10" >Ok</Button>
            <Button Click="Button1_Click" Grid.Column="2" Margin="10">Abbrechen</Button>
        </Grid>
    </StackPanel>
</Window>
